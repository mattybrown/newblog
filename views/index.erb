<%= erb :left_column %>
<div class="col-md-9">
  <% @stories.each do |story| %>
  <div class="row highlight">
    <div class="col-xs-7 col-md-3"><a href="/read/<%= story.id %>"><img src="<%= story.file.thumb %>" class="img-thumbnail" /></a></div>
    <div class="col-xs-13 col-md-9"><a href="/read/<%= story.id %>"><h3><%= story.title %></h3></a></div>
    <div class="col-xs-13 col-md-9"><em><%= story.summary %></em></div>
  </div>
  <% end %>
</div>
